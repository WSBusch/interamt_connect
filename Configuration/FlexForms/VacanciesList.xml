<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <sheetTitle>Allgemein</sheetTitle>
                <type>array</type>
                <el>
                    <settings.mode>
                        <label>Anzeige-Modus</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <numIndex index="0">Listenansicht</numIndex>
                                    <numIndex index="1">list</numIndex>
                                </numIndex>
                                <numIndex index="1">
                                    <numIndex index="0">Detailansicht</numIndex>
                                    <numIndex index="1">show</numIndex>
                                </numIndex>
                            </items>
                        </config>
                    </settings.mode>
                    <settings.behaviour>
                        <label>Datensätze zur Ausgabe</label>
                        <description>Woher stammen die Stellenausschreibungen? Ist die API nicht verfügbar, wird auf den
                            Fallback zurückgegriffen.
                        </description>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <numIndex index="0">Live-Daten (API) verwenden</numIndex>
                                    <numIndex index="1">onFly</numIndex>
                                </numIndex>
                                <numIndex index="1">
                                    <numIndex index="0">Aus Fallback verwenden</numIndex>
                                    <numIndex index="1">fallback</numIndex>
                                </numIndex>
                            </items>
                        </config>
                    </settings.behaviour>
                </el>
            </ROOT>
        </sDEF>

        <s_ListView>
            <ROOT>
                <sheetTitle>Listenansicht</sheetTitle>
                <type>array</type>
                <el>
                    <settings.authorities>
                        <label>Anzuzeigende Behörden</label>
                        <config>
                            <type>select</type>
                            <renderType>selectMultipleSideBySide</renderType>
                            <foreign_table>tx_interamtconnect_domain_model_authority</foreign_table>
                            <minitems>0</minitems>
                            <maxitems>99</maxitems>
                            <fieldControl>
                                <addRecord>
                                    <disabled type="boolean">0</disabled>
                                </addRecord>
                            </fieldControl>
                        </config>
                    </settings.authorities>
                    <settings.sortField>
                        <label>Sortieren nach</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <numIndex index="0">Ausschreibungsdatum</numIndex>
                                    <numIndex index="1">tender_date</numIndex>
                                </numIndex>
                                <numIndex index="1">
                                    <numIndex index="0">Stellenbezeichnung</numIndex>
                                    <numIndex index="1">title</numIndex>
                                </numIndex>
                            </items>
                            <default>tender_date</default>
                        </config>
                    </settings.sortField>
                    <settings.sortDirection>
                        <label>Sortierreihenfolge</label>
                        <config>
                            <type>select</type>
                            <renderType>selectSingle</renderType>
                            <items>
                                <numIndex index="0">
                                    <numIndex index="0">aufsteigend</numIndex>
                                    <numIndex index="1">ASC</numIndex>
                                </numIndex>
                                <numIndex index="1">
                                    <numIndex index="0">absteigend</numIndex>
                                    <numIndex index="1">DESC</numIndex>
                                </numIndex>
                            </items>
                            <default>DESC</default>
                        </config>
                    </settings.sortDirection>
                    <settings.detailPageLink>
                        <label>Link zur Detailseite</label>
                        <description>Ist dieser Haken nicht gesetzt, wird zur INTERAMT Detailseite verlinkt.
                        </description>
                        <config>
                            <type>check</type>
                            <default>1</default>
                        </config>
                    </settings.detailPageLink>
                    <settings.detailPage>
                        <label>Detailseite</label>
                        <config>
                            <type>group</type>
                            <internal_type>db</internal_type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>
                    </settings.detailPage>
                </el>
            </ROOT>
        </s_ListView>

        <s_Filter>
            <ROOT>
                <sheetTitle>Listenansicht - Filter</sheetTitle>
                <type>array</type>
                <el>
                    <settings.filter.enabled>

                        <label>Filter aktivieren</label>
                        <config>
                            <type>check</type>
                        </config>

                    </settings.filter.enabled>
                    <settings.filter.free_text>

                        <label>Freitext-Suche</label>
                        <config>
                            <type>check</type>
                        </config>

                    </settings.filter.free_text>
                    <settings.filter.area>

                        <label>Bereich-Suche</label>
                        <description>Checkbox-Liste mit allen zur Verfügung stehenden Einsatzbereichen</description>
                        <config>
                            <type>check</type>
                        </config>

                    </settings.filter.area>
                    <settings.filter.contracts>

                        <label>Dienstverhältnis-Suche</label>
                        <description>Checkbox-Liste mit allen zur Verfügung stehenden Dienstverhältnissen</description>
                        <config>
                            <type>check</type>
                        </config>

                    </settings.filter.contracts>
                    <settings.filter.employment_duration>

                        <label>Beschäftigungsdauer</label>
                        <config>
                            <type>check</type>
                        </config>

                    </settings.filter.employment_duration>
                    <settings.filter.work_time>

                        <label>Arbeitszeiten</label>
                        <config>
                            <type>check</type>
                        </config>

                    </settings.filter.work_time>
                </el>
            </ROOT>
        </s_Filter>

        <s_DetailView>
            <ROOT>
                <sheetTitle>Detailansicht</sheetTitle>
                <type>array</type>
                <el>
                    <settings.listPage>

                        <label>Übersichtsseite</label>
                        <config>
                            <type>group</type>
                            <internal_type>db</internal_type>
                            <allowed>pages</allowed>
                            <size>1</size>
                            <maxitems>1</maxitems>
                            <minitems>0</minitems>
                            <show_thumbs>1</show_thumbs>
                            <wizards>
                                <suggest>
                                    <type>suggest</type>
                                </suggest>
                            </wizards>
                        </config>

                    </settings.listPage>
                </el>
            </ROOT>
        </s_DetailView>
    </sheets>
</T3DataStructure>
